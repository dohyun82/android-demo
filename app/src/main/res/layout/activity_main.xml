<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_view_binding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Binding"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btn_data_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Store"
        app:layout_constraintTop_toBottomOf="@id/btn_view_binding"
        />

    <Button
        android:id="@+id/btn_lifecycle_aware"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lifecycle-Aware"
        app:layout_constraintTop_toBottomOf="@id/btn_data_store"
        />

    <Button
        android:id="@+id/btn_compose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compose"
        app:layout_constraintTop_toBottomOf="@id/btn_lifecycle_aware"
        />

</androidx.constraintlayout.widget.ConstraintLayout>